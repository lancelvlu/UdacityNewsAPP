/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.swiper {
  /* margin-top: 40rpx; */
  height: 360rpx;
  width: 100%;
  position: relative;
}

.hot-label{
  top: 0;
  left: 0;
  position: absolute;
  z-index: 999;
  height: 50rpx;
  width: 50rpx;
}
.swiper .hot-cover {
  height: 100%;
  width: 100%;
}
.swiper .title{
	position: absolute;
	top: 280rpx;
	left: 20rpx;
	font-size: 30rpx;
	color: #fff;
}
.slide-nav {
  width: 100%;
  height: 100%;
}